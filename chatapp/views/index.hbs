<div class="container">
    <div class="row">
        <h1>Node Chat サンプル</h1>
    </div>
    <div class="row">
        <form method="post" action="/room">
            <div class="index-user_name">
                ユーザ名
                <input type="text" id="userName" name="userName" class="index-user_name_text">
            </div>
            <div class="index-icon">
                <p>アイコンを選択してください</p>
                <input type="radio"
                    name="index-icon-select"
                    class="index-icon_arupaka" 
                    value="animal_arupaka.png"
                    checked
                    >
                <label><img src="animal_arupaka.png" alt="アルパカ"></label>
                <input type="radio" 
                    name="index-icon-select"
                    class="index-icon_buta" 
                    value="animal_buta.png">
                <label><img src="animal_buta.png" alt="ブタ"></label>
            </div>

            <div class="index-enter">
                <input type="button" value="入室する" class="common-button index-enter_button" onclick="enter();">
            </div>
        </form>
    </div>
</div>

<script src="/javascripts/index.js"></script>

